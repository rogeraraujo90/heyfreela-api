    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@modules/*": ["modules/*"],
      "@database/*": ["infra/database/*"],
    }
  },
  "extends": "@tsconfig/node16/tsconfig.json",
  "exclude": ["node_modules"]
}
