{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app": ["src/app.ts"],
      "@modules/*": ["src/modules/*"],
      "@database/*": ["src/infra/database/*"]
    }
  },
  "extends": "@tsconfig/node16/tsconfig.json",
  "exclude": ["node_modules"]
}
